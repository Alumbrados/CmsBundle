<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
        <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/sandstone/bootstrap.min.css" rel="stylesheet">
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        {% stylesheets '@CmsBundle/Resources/public/css/*' %}
        <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}  
        {% stylesheets '@CmsBundle/Resources/public/js/bootstrap-select/css/bootstrap-select.min.css' %}
            <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}    
        {% stylesheets '@CmsBundle/Resources/public/js/ajax-bootstrap-select/css/ajax-bootstrap-select.css' %}
            <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}          
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">AViSO</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li{% if app.request.get('_route') == path('cms_dashboard') %} class="active"{% endif %}><a href="{{ path('cms_dashboard') }}">{% trans %}dashboard{% endtrans %}</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{% trans %}site{% endtrans %} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li{% if app.request.get('_route') == path('cms_page') %} class="active"{% endif %}><a href="{{ path('cms_page') }}">{% trans %}pages{% endtrans %}</a></li>
                                <li{% if app.request.get('_route') == path('cms_post') %} class="active"{% endif %}><a href="{{ path('cms_post') }}">{% trans %}posts{% endtrans %}</a></li>
                                <li{% if app.request.get('_route') == path('cms_event') %} class="active"{% endif %}><a href="{{ path('cms_event') }}">{% trans %}events{% endtrans %}</a></li>
                                <li class="divider"></li>
                                <li{% if app.request.get('_route') == path('cms_menu') %} class="active"{% endif %}><a href="{{ path('cms_menu') }}">{% trans %}menus{% endtrans %}</a></li>
                            </ul>
                        </li>                        
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{% trans %}catalogus{% endtrans %} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li{% if app.request.get('_route') == path('cms_species') %} class="active"{% endif %}><a href="{{ path('cms_species') }}">{% trans %}species{% endtrans %}</a></li>
                                <li{% if app.request.get('_route') == path('cms_selection') %} class="active"{% endif %}><a href="{{ path('cms_selection') }}">{% trans %}selections{% endtrans %}</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{% trans %}webshop{% endtrans %} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li{% if app.request.get('_route') == path('cms_species_prices') %} class="active"{% endif %}><a href="{{ path('cms_species_prices') }}">{% trans %}price_list{% endtrans %}</a></li>
                                <li{% if app.request.get('_route') == path('cms_species_stock') %} class="active"{% endif %}><a href="{{ path('cms_species_stock') }}">{% trans %}stock_list{% endtrans %}</a></li>
                                <li class="divider"></li>
                                <li><a href="#">{% trans %}orders{% endtrans %}</a></li>
                                <li><a href="#">{% trans %}customers{% endtrans %}</a></li>
                            </ul>
                        </li>                        
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-fw fa-cog"></i> {% trans %}settings{% endtrans %} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li{% if app.request.get('_route') == path('cms_user') %} class="active"{% endif %}><a href="{{ path('cms_user') }}">{% trans %}users{% endtrans %}</a></li>
                                <li><a href="#">{% trans %}roles{% endtrans %}</a></li>
                            </ul>
                        </li>    
                        {% if app.user %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-fw fa-male"></i> {{ app.user.username }} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('cms_user_update', {'id': app.user.id}) }}">{% trans %}profile{% endtrans %}</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">{% trans %}logout{% endtrans %}</a></li>
                            </ul>
                        </li>
                        {% endif %}
                    </ul>
                    <form class="navbar-form navbar-right" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="{% trans %}search{% endtrans %}">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </form>                    
                </div>
            </div>
        </nav>        
        <div class="container-fluid">
            <h1>{{ section|trans }}</h1>
            {{ wo_render_breadcrumbs() }}
            {% block body %} {% endblock %}
        </div>
        <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
        {% javascripts '@CmsBundle/Resources/public/js/bootstrap-select/js/bootstrap-select.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts '@CmsBundle/Resources/public/js/ajax-bootstrap-select/js/ajax-bootstrap-select.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}        
        {% javascripts '@CmsBundle/Resources/public/js/*' filter='uglifyjs2' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}          
    </body>
</html>
